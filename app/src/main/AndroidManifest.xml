<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yasuhiro.ca.find">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.PlaceListActivity"
            android:label="@string/title_activity_place_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.RegistPlaceActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.PlaceDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>